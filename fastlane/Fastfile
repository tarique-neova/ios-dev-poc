platform :ios do

  before_all do
    setup_circle_ci
  end

  lane :release do
    increment_build_number(
      build_number: app_store_build_number(
        initial_build_number: "0.1",
        version: get_version_number(xcodeproj: "ios-dev-poc.xcodeproj"),
        live: false
      ) +1,
    )
    # Build your iOS app
    gym(scheme: "ios-dev-poc")
    # Upload the app to App Store Connect
    pilot
  end
end
